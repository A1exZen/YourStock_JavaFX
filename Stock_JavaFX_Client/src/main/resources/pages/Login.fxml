<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="470.0" prefWidth="700.0" stylesheets="@../css/login.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.Login">
    <children>
        <Button fx:id="buttonLogin" layoutX="288.0" layoutY="275.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="42.0" prefWidth="370.0" styleClass="buttonMain" stylesheets="@../css/login.css" text="Авторизация" textAlignment="CENTER" textFill="WHITE" />
        <Label fx:id="labelMessage" layoutX="87.0" layoutY="282.0" prefHeight="29.0" prefWidth="507.0" text="Ошибка входа в систему!" textFill="RED" visible="false">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="-6.0" layoutY="147.0" pickOnBounds="true" preserveRatio="true" />
        <VBox layoutX="288.0" layoutY="159.0" prefHeight="76.0" prefWidth="370.0">
            <children>
                <Label prefHeight="37.0" prefWidth="158.0" text="Введите ваш пароль:">
                    <font>
                        <Font name="Helvetica" size="15.0" />
                    </font>
                </Label>
                <PasswordField fx:id="password" prefHeight="38.0" prefWidth="370.0" promptText="******">
                    <font>
                        <Font name="Nunito Regular" size="12.0" />
                    </font>
                </PasswordField>
            </children>
        </VBox>
        <VBox layoutX="288.0" layoutY="71.0" prefHeight="76.0" prefWidth="370.0">
            <children>
                <Label prefHeight="50.0" prefWidth="176.0" text="Введите ваш логин:">
                    <font>
                        <Font name="Helvetica" size="15.0" />
                    </font>
                </Label>
                <TextField fx:id="username" prefHeight="36.0" prefWidth="390.0" promptText="my_login123" />
            </children>
        </VBox>
        <HBox layoutX="288.0" layoutY="335.0" prefHeight="42.0" prefWidth="370.0">
            <children>
                <Label prefHeight="38.0" prefWidth="454.0" text="Нет аккаунта?">
                    <font>
                        <Font name="Helvetica" size="15.0" />
                    </font>
                </Label>
                <Button fx:id="buttonRegister" mnemonicParsing="false" onAction="#handleRegister" prefHeight="42.0" prefWidth="427.0" styleClass="outlineButton" stylesheets="@../css/login.css" text="Регистрация" />
            </children>
        </HBox>
        <VBox layoutX="54.0" layoutY="129.0" prefHeight="206.0" prefWidth="186.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="63.0" prefWidth="186.0">
                    <children>
                        <Label fx:id="logo1" alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="69.0" styleClass="logo1" text="Your" wrapText="true">
                            <font>
                                <Font name="Helvetica" size="15.0" />
                            </font>
                        </Label>
                        <Label fx:id="logo2" alignment="CENTER" contentDisplay="CENTER" prefHeight="56.0" prefWidth="93.0" styleClass="logo2" stylesheets="@../css/login.css" text="Stock" wrapText="true">
                            <font>
                                <Font name="Helvetica" size="15.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <Label fx:id="logo_text" prefHeight="69.0" prefWidth="186.0" text="Авторизируйтесь с помощью вашего логина и пароля" wrapText="true">
                    <font>
                        <Font name="Helvetica" size="15.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </children>
</AnchorPane>
